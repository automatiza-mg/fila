{{define "content"}}
  <main class="flex min-h-svh flex-col items-center justify-center p-6">
    <section class="mx-auto w-full max-w-lg space-y-8">
      <h1 class="text-center text-2xl font-semibold">Adicionar Usuário</h1>

      {{template "usuarios/criar-form" .}}
    </section>
  </main>
{{end}}

{{define "usuarios/criar-form"}}
  <form
    hx-post="/gestor/usuarios/criar"
    hx-swap="outerHTML"
    class="flex flex-col gap-8"
  >
    {{template "csrf" .}}
    <div class="space-y-4">
      <div class="grid gap-1">
        <label for="nome" class="form-label">Nome</label>
        <input
          id="nome"
          type="text"
          name="nome"
          class="form-control"
          required
          maxlength="255"
          value="{{.Form.Nome}}"
          {{if .Form.FieldErrors.nome}}
            aria-invalid="true"
          {{end}}
        />
        {{with .Form.FieldErrors.nome}}
          <span class="text-sm text-red-600">{{.}}</span>
        {{end}}
      </div>

      <div class="grid gap-1">
        <label for="cpf" class="form-label">CPF</label>
        <input
          id="cpf"
          type="text"
          name="cpf"
          class="form-control"
          data-format="cpf"
          required
          minlength="14"
          value="{{.Form.CPF}}"
          {{if .Form.FieldErrors.cpf}}
            aria-invalid="true"
          {{end}}
        />
        {{with .Form.FieldErrors.cpf}}
          <span class="text-sm text-red-600">{{.}}</span>
        {{end}}
      </div>

      <div class="grid gap-1">
        <label for="email" class="form-label">Email</label>
        <input
          id="email"
          type="email"
          name="email"
          class="form-control"
          required
          maxlength="255"
          value="{{.Form.Email}}"
          {{if .Form.FieldErrors.email}}
            aria-invalid="true"
          {{end}}
        />
        {{with .Form.FieldErrors.email}}
          <span class="text-sm text-red-600">{{.}}</span>
        {{else}}
          <span class="text-muted-foreground text-sm">
            Um link de conclusão do cadastro será enviado a esse email.
          </span>
        {{end}}
      </div>

      <div class="grid gap-1">
        <label for="papel" class="form-label">Papel</label>
        <select
          id="papel"
          name="papel"
          class="form-control"
          required
          {{if .Form.FieldErrors.papel}}
            aria-invalid="true"
          {{end}}
        >
          {{range .PapelOptions}}
            <option value="{{.Value}}" {{if .Selected}}selected{{end}}>
              {{.Label}}
            </option>
          {{end}}
        </select>
        {{with .Form.FieldErrors.papel}}
          <span class="text-sm text-red-600">{{.}}</span>
        {{end}}
      </div>
    </div>

    <button
      type="submit"
      class="bg-primary text-background rounded-xl px-4 py-2 font-semibold"
    >
      Salvar Alterações
    </button>
  </form>
{{end}}
